<% title "Twitter Sign Up" %>
<% header "Almost done!" %>


<% form_for [:twitter,@user], :url => twitter_users_path, :html => { :id => 'form' } do |form| -%>
  <%= form.error_messages %>
  <ul>
    <li>
		  <%= form.label :username %><br/>
      <%= form.text_field :username, :class => 'text' %>
      <%= error_message_on :user, :username %>
		</li>
		<li>
		  <%= form.label :email, 'Please provide your email so we can know how to contact you' %><br/>
      <%= form.text_field :email, :class => 'text' %>
      <%= error_message_on :user, :email %>
		</li>
		<li>
		  <p>If you want to login using your email/username, you'll have to reset your password in your profile settings.</p>
		</li>
		<%#
		<li>
		  <%= form.label :password % ><br/>
      <%= form.password_field :password, :class => 'text' % >
      <%= error_message_on :user, :password % >
		</li>
		<li>
		  <%= form.label :password_confirmation, "Confirm password" % ><br/>
      <%= form.password_field :password_confirmation, :class => 'text' % >
       <%= error_message_on :user, :password % >
		</li>
		%>
		<li>
		 <div class="button"> <%= form.submit "Sign up"%> </div>
		</li>
	</ul>
<% end %>